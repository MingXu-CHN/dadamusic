<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/actionBar" >

        <ImageButton
            android:id="@+id/btnGengduo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/sel_actionbar_gengduo" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioMine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/default_text_size"
                android:text="我的"
                android:textColor="@drawable/sel_actionbar_tab" />

            <RadioButton
                android:id="@+id/radioMusic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:textSize="@dimen/default_text_size"
                android:text="音乐"
                android:textColor="@drawable/sel_actionbar_tab" />

            <RadioButton
                android:id="@+id/radioDongtai"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/default_text_size"
                android:text="动态"
                android:textColor="@drawable/sel_actionbar_tab" />

            <RadioButton
                android:id="@+id/radioFind"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/default_text_size"
                android:text="发现"
                android:textColor="@drawable/sel_actionbar_tab" />
        </RadioGroup>

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/sel_actionbar_search" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionBar" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayoutBangdanDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayoutSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBottomBar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#ddffffff"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="2dp" >
        <ImageView 
            android:id="@+id/ivBBPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/song_image_loading_default"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tvBBTitle"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="哒哒音乐"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvBBSinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvBBTitle"
                android:text="哒哒音乐  乐享其成"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="10sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivBBPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/bt_minibar_play_normal" />

        <ImageView
            android:id="@+id/ivBBNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/bt_minibar_next_normal" />

        <ImageView
            android:id="@+id/ivBBPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/bt_minibar_playinglist_normal" />
        
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayoutPlaypanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</RelativeLayout>

