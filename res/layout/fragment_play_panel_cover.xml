<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/ivCoverBackground"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"/>
	
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:layout_alignTop="@+id/ivCoverBackground"
        android:layout_alignLeft="@+id/ivCoverBackground"
        android:layout_alignRight="@+id/ivCoverBackground"
        android:layout_alignBottom="@+id/ivCoverBackground"/>
    
    <ImageView
        android:id="@+id/ivShadow"
        android:layout_centerHorizontal="true"
        android:layout_width="246dp"
        android:layout_height="246dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/bg_playpage_cover" />

    <ImageView
        android:id="@+id/ivCoverPic"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_margin="8dp"
        android:layout_alignLeft="@+id/ivShadow"
        android:layout_alignTop="@+id/ivShadow"
        android:background="#ffffff"
        android:src="@drawable/default_album_playing_new" />

    <TextView
        android:id="@+id/tvCoverTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCoverPic"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:text="歌曲名称" />
    <TextView
        android:id="@+id/tvCoverSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCoverTitle"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:text="歌手名称" />
    
    
</RelativeLayout>

